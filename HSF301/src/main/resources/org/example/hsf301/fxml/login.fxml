<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  prefHeight="650.0" prefWidth="830.0" xmlns="http://javafx.com/javafx/22"
  xmlns:fx="http://javafx.com/fxml/1">
  <left>
    <AnchorPane prefHeight="634.0" prefWidth="301.0" BorderPane.alignment="CENTER">
      <ImageView fx:id="brandingImageView" fitHeight="650.0" fitWidth="303.0" pickOnBounds="true"
        preserveRatio="true">
        <image>
          <Image url="@../assets/img/branding.png"/>
        </image>
      </ImageView>
      <ImageView fx:id="logoImageView" fitHeight="382.0" fitWidth="270.0" layoutX="16.0"
        layoutY="128.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../assets/img/koi.png"/>
      </ImageView>
    </AnchorPane>
  </left>
  <center>
    <AnchorPane prefHeight="650.0" prefWidth="500.0" style="-fx-background-color: #FFFFFF;"
      BorderPane.alignment="CENTER">
      <children>
        <TextField fx:id="usernameTextField" layoutX="42.0" layoutY="211.0" prefHeight="62.0"
          prefWidth="442.0" promptText="Username" style="-fx-background-color: #F1F1F1;">
          <font>
            <Font size="30.0"/>
          </font>
        </TextField>
        <PasswordField fx:id="passwordField" layoutX="43.0" layoutY="381.0" prefHeight="62.0"
          prefWidth="439.0" promptText="Password" style="-fx-background-color: #F1F1F1;">
          <font>
            <Font size="30.0"/>
          </font>
        </PasswordField>
        <Button fx:id="loginButton" layoutX="40.0" layoutY="497.0" mnemonicParsing="false"
          onAction="#loginButtonAction" prefHeight="71.0" prefWidth="441.0"
          style="-fx-background-color: #121212;" text="Submit" textFill="WHITE">
          <effect>
            <Glow/>
          </effect>
          <cursor>
            <Cursor fx:constant="HAND"/>
          </cursor>
          <font>
            <Font name="System Bold" size="35.0"/>
          </font>
        </Button>
        <Label layoutX="190.0" layoutY="14.0" text="Log In" textFill="#121212">
          <font>
            <Font name="Roboto Medium" size="60.0"/>
          </font>
        </Label>
        <HBox alignment="CENTER" layoutX="27.0" layoutY="608.0" prefHeight="28.0" prefWidth="234.0">
          <Label text="Not a member?" textFill="#121212">
            <font>
              <Font name="Roboto Light" size="14.0"/>
            </font>
          </Label>
          <Button fx:id="signupHere" contentDisplay="TOP" mnemonicParsing="false"
            onAction="#signupHereAction" prefHeight="34.0" prefWidth="115.0"
            style="-fx-background-color: transparent;" text="Sign up here">
            <cursor>
              <Cursor fx:constant="HAND"/>
            </cursor>
            <effect>
              <Glow/>
            </effect>
            <font>
              <Font name="Roboto Medium" size="14.0"/>
            </font>
          </Button>
        </HBox>
        <Button fx:id="forgotPassword" alignment="CENTER" layoutX="358.0" layoutY="605.0"
          mnemonicParsing="false" onAction="#forgotPasswordAction" style="-fx-border-style: none;"
          text="Forgot Password">
          <cursor>
            <Cursor fx:constant="HAND"/>
          </cursor>
          <effect>
            <Glow/>
          </effect>
          <font>
            <Font name="Roboto Medium" size="14.0"/>
          </font>
        </Button>
        <HBox alignment="CENTER" layoutX="247.0" layoutY="603.0" prefHeight="32.0" prefWidth="96.0">
          <ImageView fx:id="ggImageView" fitHeight="30.0" fitWidth="30.0"
            onMousePressed="#loginViaGoogleAction" pickOnBounds="true" preserveRatio="true">
            <cursor>
              <Cursor fx:constant="HAND"/>
            </cursor>
            <effect>
              <Glow/>
            </effect>
            <HBox.margin>
              <Insets right="30.0"/>
            </HBox.margin>
            <Image url="@../assets/img/google.png"/>
          </ImageView>
          <ImageView fx:id="fbImageView" fitHeight="30.0" fitWidth="30.0"
            onMousePressed="#loginViaFacebookAction" pickOnBounds="true" preserveRatio="true">
            <image>
              <Image url="@../assets/img/facebook.png"/>
            </image>
            <cursor>
              <Cursor fx:constant="HAND"/>
            </cursor>
            <effect>
              <Glow/>
            </effect>
          </ImageView>
        </HBox>
        <Label layoutX="35.0" layoutY="135.0" prefHeight="45.0" prefWidth="336.0"
          text="Email or Phone number" textFill="#121212">
          <font>
            <Font name="Roboto Light" size="30.0"/>
          </font>
        </Label>
        <Label layoutX="40.0" layoutY="312.0" text="Password" textFill="#121212">
          <font>
            <Font name="Roboto Light" size="30.0"/>
          </font>
        </Label>
      </children>
    </AnchorPane>
  </center>
</BorderPane>
